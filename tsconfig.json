{
	"compilerOptions": {
		"target": "es2015",
		"jsx": "react",
		"allowJs": false,
		"module": "commonjs",
		"alwaysStrict": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*", "index.ts"]
}
